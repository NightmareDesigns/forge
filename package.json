{
  "name": "nightmare-designs-forge",
  "version": "0.1.0",
  "description": "A powerful design and cutting software - complete replacement for Cricut Design Space with more tools and options",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "keygen": "electron src/keygen-app.js",
    "ai-server": "node src/server/server.js",
    "admin-server": "node src/admin/AdminServer.js",
    "admin-dashboard": "node src/admin/AdminServer.js & start http://localhost:5000/dashboard.html",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src/",
    "generate-keys": "node scripts/generate-keys.js",
    "manage-keys": "node scripts/manage-keys.js"
  },
  "keywords": [
    "design",
    "cutting",
    "cricut",
    "svg",
    "vinyl",
    "crafting",
    "diy",
    "nightmare-designs-forge",
    "nightmare-designs"
  ],
  "author": "Nightmare Designs",
  "license": "MIT",
  "homepage": "https://nightmaredesigns.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/nightmaredesigns/forge"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bezier-js": "^6.1.3",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "fabric": "^5.3.0",
    "jimp": "^0.22.10",
    "node-fetch": "^3.3.0",
    "opentype.js": "^1.3.4",
    "paper": "^0.12.17",
    "potrace": "^2.1.1",
    "serialport": "^12.0.0",
    "svg-parser": "^2.0.4",
    "svg-path-parser": "^1.1.0",
    "svgo": "4.0.0",
    "usb": "^2.11.0"
  },
  "build": {
    "appId": "org.nightmaredesigns.forge",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "package-lock.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "asar": false,
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
